<h1>New company user</h1>
<%= form_for @company_user do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<%= f.hidden_field :company_id, {:value => @company.id} %>
	<div class="field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>