<style>
#top_nav_bar {
	font-size: 15px;
	padding-top:4px;
}
</style>
<header>
	<nav class="topbar" data-scollspy="scrollspy" data-dropdown="dropdown">
		<div class="fill">
			<div class="container">
				<h3><a style="font-size: 26px;" href="/">bright<sub>e</sub>st</a></h3>
				<% if signed_in? %>
				<ul id="top_nav_bar">
					<li><%= link_to "Browse", explore_path %></li>
          <li><%= link_to "Create", create_path %></li>
					<li>
            <a href="<%= user_url(current_user) %>">
              <%= image_tag current_user.profile_pic, :size => "18x18", :style => "display:inline; float:left; margin-right: 5px;" %>
              <%= current_user.name %>
            </a>
          </li>
					<% if current_user.company.enable_company_store %>
						<li><%= link_to "Rewards", rewards_path %></li>
					<% end %>
					<% if current_user.company_admin? %>
						<li><%= link_to "Administration", current_user.company %></li>
            <% if current_user.company.enable_dashboard %>
						<li><%= link_to "Dashboard", dashboard_path %></li>
            <% end %>
					<% end %>
          <% if current_user.company.enable_leaderboard %>
            <li><%= link_to "Leaderboard", leaderboards_path %></li>
          <% end %>
				</ul>
				<% end %>
				<ul class="nav secondary-nav" id="top_nav_bar">
					<% if signed_in? %>
            <% if current_user.company.enable_tour %>
            <li>
              <% if current_user.company_admin? %>
              <%= link_to "Take the tour", tours_path %>
              <% else %>
              <%= link_to "Take the tour", user_tour_tour_path(1) %>
              <% end %>
            </li>
            <% end %>
					<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
					<% else %>
					<li ><%= link_to "Sign in", signin_path %></li>
					<% end %>
				</ul>
				<% if signed_in? && current_user.admin? %>
				<ul class="nav secondary-nav">
					<li class="menu">
						<a href="#" class="dropdown-toggle">Admin</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Companies", companies_path %></li>
							<li><%= link_to "Users", users_path %></li>
							<li><%= link_to "Transactions", user_transactions_path %></li>
						</ul>
					</li>
				</ul>
				<% end %>
			</div>
		</div>
	</nav>
</header>