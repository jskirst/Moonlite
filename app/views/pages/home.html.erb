<section style="margin-bottom:20px">
  <%= link_to "Create", new_path_path, :class => "btn secondary", :style => "float: right; margin: 6px 3px 0 0;" %>
  <%= link_to "Explore", explore_path, :class => "btn primary", :style => "float: right; margin: 6px 10px 0 0;" %>
  <h2 style="margin-bottom: 15px;">My Paths</h2>
<% if @enrolled_paths.empty? && @completed_paths.empty? %>
  <p>You are not currently enrolled in any paths.</p>
  <%= link_to "Get started!", explore_path, :class => "btn primary" %>
<% elsif @enrolled_paths.empty? && !@completed_paths.empty? %>
  <p>Congratulations! You've completed all your enrolled paths.</p>
<% end %>
  <%= render "pages/user_progress", { :paths_list => @enrolled_paths } %>
  <%= render "pages/suggested_paths", {:paths_title => "Recommended for you", :paths_list => @suggested_paths} %>
</section>
<section>
  <h2>News</h2>
<% if @user_achievements.empty? %>
  <p>No news yet today! <%= link_to "Go make some!", explore_path %></p>
<% else %>
  <%= render "pages/user_news", { :user_news => @user_achievements } %>
<% end %>
</section>