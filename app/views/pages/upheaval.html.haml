  .row-fluid.challenge_showcase{ style: "" }
    .container
      .span12{ style: "margin:10px auto; height: 200px; padding: 10px 0; text-align: center; " }
        .header
          %h3{ style: "color: inherit;"} Show the world what you know with MetaBright Challenges
        .body
          .carousel
            .left_scroll{ onclick: "landing_slide('left');"}
              = image_tag ICON_CAROUSEL_LEFT, alt: "Left"
            .inner
              %ul
                - @paths.each do |path|
                  %li.mosaic-block.bar2
                    - if current_user
                      = link_to intro_path(c: path.permalink), class: "mosaic-overlay" do
                        .details
                          %h4= truncate(path.name,length: 14, separator: ' ')
                          %h5 Try this Challenge!
                    - else
                      = link_to challenge_url(path.permalink), class: "mosaic-overlay" do
                        .details
                          %h4= truncate(path.name,length: 14, separator: ' ')
                          %h5 Try this Challenge!
                    %div{ style: "text-align: left;"}
                      - if current_user
                        = link_to intro_path(c: path.permalink) do
                          = image_tag path.picture, class: "mosaic-backdrop", style: "display:inline;", size: "110x110", alt: "#{path.name}"
                      - else                  
                        = link_to challenge_url(path.permalink) do
                          = image_tag path.picture, class: "mosaic-backdrop", style: "display:inline;", size: "110x110", alt: "#{path.name}"
                  
                
            .right_scroll{ onclick: "landing_slide('right');"}
              = image_tag ICON_CAROUSEL_RIGHT, alt: "Right"
              
              
              
              
              
              
              
              
              
          
      
