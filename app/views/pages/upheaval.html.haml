:css
  body { background-image: none; background-color: white;}
  .span7 {  }
  h1 { text-align: center; font-size: 4.5em; line-height: 1.25em; padding-bottom: 34px; }
  h3 {  color: #8a8d99;}
  .container{ float: none; width: 980px; margin: 0 auto;}
  .container.body { width: 100% !important; padding: 0 !important; margin-top: 40px; }
  .triangle{
    position: relative;
    float: right;
    bottom: 192px;
    left: 30px;
    display: inline-block;
    width: 0px;
    height: 0px;
    border-style: solid;
    border-width: 50px 0 50px 30px;
    border-color: transparent transparent transparent #ffffff;
  }
  .main_splash .option:hover .button { color: gray; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.48); }
  .button { background-color: rgb(231, 231, 231); float: right; text-shadow: none; color: #8a8d99;}
  .button:hover { color: gray; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.48);  }
  .happy_users .body .picture img { height: 110px; width: 110px;  }
  .happy_users .testimonial { display: inline-block; width: 33%; margin: 15px 0; text-align: center; vertical-align: top;}
  p.speech {
    color: #404040;
    position: relative;
    width: 230px;
    padding: 15px; 
    text-align: center;
    background-color: #fff;
    border: 8px solid #666;
    -webkit-border-radius: 30px;
    -moz-border-radius: 30px;
    border-radius: 30px;
    margin-bottom: 50px;
  }
  p.speech.left:before {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    left: 105px;
    top: 102px;
    border: 25px solid;
    border-color: #666 transparent transparent #666;
  }
  p.speech.left:after {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    left: 114px;
    top: 102px;
    border: 15px solid;
    border-color: #fff transparent transparent #fff;
  }
  p.speech.right:before {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    right: 106px;
    top: 102px;
    border: 25px solid;
    border-color: #666 #666 transparent transparent;
  }
  p.speech.right:after {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    right: 114px;
    top: 102px;
    border: 15px solid;
    border-color: #fff #fff transparent transparent;
  }
  p.speech.center:before {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    right: 81px;
    top: 102px;
    border: 48px solid;
    border-color: #666 transparent transparent transparent;
  }
  p.speech.center:after {
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    right: 94px;
    top: 102px;
    border: 34px solid;
    border-color: #fff transparent transparent transparent;
  }
  
