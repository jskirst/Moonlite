:css
  body{ background-image: url("https://s3.amazonaws.com/moonlite-nsdub/static/Backgrounds/gplaypattern.png"); background-repeat: repeat; background-size: auto; }
  .aboutcontainer{ width: 950px; background: rgba(36, 72, 109, 0.8); }

#employer1.aboutcontainer
  .aboutbox
    .aboutheader
      %img{ src: STONEY_SMALL_URL, alt: "Stoney"}
      %span Turbocharge your hiring
    .body
      %div
        %h4 Submit this form and someone from our team will get in touch to learn about your business and to get you set up. If it turns out MetaBright isn't for you, you're under no obligation to complete the transaction.
      = form_for(Opportunity.new, url: opportunity_path, html: { class: "form-horizontal" }) do |f|
        .control-group
          %label.control-label Product: 
          .controls{ style: "margin-top: 4px; "}
            %span{ style: "font-size: 18px; "} Talent Miner - Ultra
            = link_to "Change", "javascript:history.back()", style: "margin-left: 10px; "
        .control-group
          %label.control-label{ for: "inputName"} Your Name
          .controls
            = f.text_field :name, placeholder: "Your name..."
        .control-group
          %label.control-label{ for: "inputCompanyName"} Company Name
          .controls
            = f.text_field :company, placeholder: "Company name..."
        .control-group
          %label.control-label{ for: "inputEmail"} Email
          .controls
            = f.text_field :email, placeholder: "Email..."
        .control-group
          %label.control-label{ for: "inputPhone"} Phone
          .controls
            = f.text_field :phone, placeholder: "Phone..."
        .control-group
          .controls
            = f.submit "Submit", class: "button button-actionable"
