<section>
	<div class="input" style="float:right; margin-top: 5px">
	<%= form_tag explore_path, :method => "get" do %>
		<%= text_field_tag :search, params[:search], :class => "xlarge", :value => "Search by title or keyword", :onclick => "this.value='';" %>
		<%= submit_tag "Search", :class => "btn primary" %>
	<% end %>
	</div>
	<div><a><h1>Browse Challenges</h1></a></div>
</section>
<section id="path_explore">
  <% @path_categories.each do |c| %>
    <% category = c[0] %>
    <% all_paths = c[1] %>
    <% if !@query.nil? %>
      <p>Your search for <strong><%= @query %></strong> returned <%= all_paths.size.to_s %> results.</p>
    <% else %>
    <hr/>
    <div class="row" style="padding-left: 20px;">
      <h2><%= category.name %></h2>
      <% if @display_all %>
        <%= link_to "View All", explore_path(:c => category.id), :style=> "float: right; padding-top: 10px;" %>
      <% end %>
    </div>
    <% end %>
    <ul class="media-grid">
    <% all_paths.each_index do |pp| %>
      <% if pp >= 12 && @display_all then break end %>
      <% path = all_paths[pp] %>
      <li>
        <a href="<%= path_path(path) %>" id="<%= path.name.gsub(" ", "_") %>">
          <div class="path-caption">
            <span class="caption-title"><%= truncate(path.name, :length => 35) %></span><br>
            <span style="font-size: 10px; float: left;"><%= path.enrolled_user_count %> users enrolled.</span>
            <span style="font-size: 10px; float: right;"><%= path.difficulty_rating %></span>
          </div>
          <img class="thumbnail" src="<%= all_paths[pp].path_pic %>" height="150" width="210">
        </a>
      </li>
    <% end %>
    </ul>
	<% end %>
</section>