<ul class="media-grid">
<% paths.each_index do |pp| %>
	<% if pp >= 4 && !display_all then break end %>
	<% path = paths[pp] %>
	<li>
		<a href="<%= path_path(path) %>" id="<%= path.name.gsub(" ", "_") %>">
			<div class="path-caption">
				<span class="caption-title" style="font-size:22px;line-height:30px;"><%= truncate(path.name, :length => 15) %></span><br>
			</div>
			<img class="thumbnail" src="<%= paths[pp].path_pic %>" height="200" width="210">
		</a>
	</li>
<% end %>
</ul>