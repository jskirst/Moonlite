:css
  body{ background-image: url("https://s3.amazonaws.com/moonlite-nsdub/static/Backgrounds/gplaypattern.png"); background-repeat: repeat; background-size: auto; }
  .aboutcontainer{ width: 1050px;}

#evaluations_overview.aboutcontainer
  .aboutbox
    .header
      = image_tag STONEY_SMALL_URL, style:"", alt: "Stoney"
      %span Evaluations Overview
      %hr
    .body
      .evaluations
        - @tasks_by_path.each do |path|
          %h3= path[:name]
          - path[:tasks].each do |task|
            .answer
              %h4= task.question
              %p= task.status_id
              %p= task.answer
              - if task.answer_type == Task::CREATIVE
                %p= task.content.to_s