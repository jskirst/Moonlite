:css
  body{ background-image: url("https://s3.amazonaws.com/moonlite-nsdub/static/Backgrounds/gplaypattern.png"); background-repeat: repeat; background-size: auto; }

#employer.aboutcontainer
  #create_evaluation.aboutbox{ style: "padding: 8px; "}
    %div{ style: "width: 100%; border-bottom: 1px solid #DDD;" }
      = image_tag STONEY_SMALL_URL, style: "height: 115px; display: inline; vertical-align: middle", alt: "Stoney"
      %h1{ style: "display: inline; vertical-align: middle; font-size:50px;" } Create an Evaluation
    %div{ style: "width: 86%; text-align: center; margin: 20px auto 0 auto; padding: 0 7% 0 7%;" }
      %h3 Your Evaluation has been created!
      .evaluation_info
        %span URL:
        %input{ value: take_group_evaluation_url(@evaluation.permalink), readonly:""}
        %div
          = image_tag LIGHT_BULB_URL, style: "height: 20px; display: inline; vertical-align: top;"
          %p Copy and paste this link into your job description, your career page, or anywhere else your candidates frequent.
      %p{ style: "margin-top: 18px; font-size: 16px;"}
        = link_to "Continue to Evaluation Overview", group_evaluations_path(@group)
