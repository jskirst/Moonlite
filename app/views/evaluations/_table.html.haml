%table
  %tbody
    - @evaluations.to_a.reverse.each do |e|
      %tr
        %td{ style: "width: 25%; overflow: hidden;" }= link_to e.title, group_evaluation_path(@group, e)
        %td{ style: "width: 25%;" }
          - e.paths.each do |path|
            .path_pic
              %div{ "data-tip" => path.name }
                %img{ src: path.picture, style: "width: 25px; height: 25px;", title: path.name, alt: path.name }
        %td{ style: "width: 30%; overflow: hidden" }= take_group_evaluation_url(e.permalink)
        %td{ style: "text-align: center; "}
          = e.evaluation_enrollments.where("submitted_at IS NOT NULL").count.to_s
          - if e.evaluation_enrollments.where("submitted_at IS NOT NULL").count == 1 
            user
          - else 
            users
        / %td{ style: "text-align: center; "}= e.evaluation_enrollments.count.to_s + " users"
        %td.gear
          = link_to edit_group_evaluation_path(@group, e) do
            %div{ "data-tip" => "Edit" }
              %img{ src: "https://s3.amazonaws.com/moonlite-nsdub/static/random+icons/gear_dark_small.png", alt: "Edit"}
        %td.gear
          = link_to group_evaluation_path(@group, e), method: :delete, confirm: "Are you sure you want to delete this Evaluation? This action is irreversible." do
            %div{ "data-tip" => "Delete" }
              %img{ src: "https://s3.amazonaws.com/moonlite-nsdub/static/random+icons/trash.png", alt: "Delete"}
    - if @evaluations.empty?
      %tr
        %td{ colspan: "5", style: "border-bottom: 0; font-size; 13px;" }
          No evaluations with that Title or Company found.
    %tr
      %td{ colspan: "5", style: "border-bottom: 0;" }
        = link_to "+ Create a new Evaluation", new_group_evaluation_path(@group)