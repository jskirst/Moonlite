:css
  body{ background-image: url("https://s3.amazonaws.com/moonlite-nsdub/static/Backgrounds/gplaypattern.png"); background-repeat: repeat; background-size: auto; }
  .aboutbox { border-radius: 0; }
  .aboutcontainer { margin-top: 25px; width: 900px; }
  
:javascript
  $(function(){
    $(".checklist li").click(function(event) {
      var mb_selected = $(".metabright-challenges input[type=checkbox]:checked").length
      var custom_selected = $(".custom-challenges input[type=checkbox]:checked").length
      if((mb_selected + custom_selected) > 5){
        $(this).find("input[type=checkbox]").prop('checked',false);
      }
    })
  })

#employer.aboutcontainer
  #create_evaluation.aboutbox{ style: "padding: 8px; "}
    %div{ style: "width: 100%; border-bottom: 1px solid #DDD;" }
      = image_tag STONEY_SMALL_URL, class: "stoney", alt: "Stoney"
      %h1.title= form_title      
    %div{ style: "width: 86%; text-align: center; margin: 20px auto 0 auto; padding: 0 7% 0 7%;" }
      - unless @evaluation.errors.empty?
        .alert.alert-error
          %p= @evaluation.errors.full_messages.join(". ")
      = form_for(@evaluation, url: form_url) do |f|
        %div{ style: "text-align: center; margin: 10px auto;" }
          %div.action_group
            %h3 What are the job details?
            %div.tips
              %h5 
                %img{ alt: "Lightbulb", src: LIGHT_BULB_URL }
                Your company name and the position title will be displayed to candidates when they take your Evaluation.
            %div.control-group
              %div.controls    
                = f.text_field :company, autofocus: "autofocus", style: "padding: 4px; width: 300px; font-size: 15px; text-align: center;", placeholder: "Company Name"
                = f.text_field :title, autofocus: "autofocus", style: "padding: 4px; width: 300px; font-size: 15px; text-align: center;", placeholder: "Position Title"
                - if false
                  %div{style: "margin-top:10px;"} Upload job description (optional)
          %div.action_group
            %h3 Which Challenges would you like to use?
            %div.tips
              %h5 
                %img{ alt: "Lightbulb", src: LIGHT_BULB_URL }
                Choose up to five Challenges total. Each Challenge should take less than 15 minutes to complete.
            .challenge_chooser
              %h5 MetaBright Challenges
              .challenges
                %ul.checklist.metabright-challenges
                  - @public_paths.each do |p|
                    %li
                      %label
                        = check_box_tag "evaluation[selected_paths][#{p.id}]", 1, @evaluation_path_ids.include?(p.id)
                        = p.name
            .challenge_chooser
              %h5 Your Custom Challenges
              .challenges
                - if @group_paths.any?
                  %ul.checklist.custom-challenges
                    - @group_paths.each do |p|
                      %li
                        %label
                          = check_box_tag "evaluation[selected_paths][#{p.id}]", 1, @evaluation_path_ids.include?(p.id)
                          = p.name
                    %p{ style: "margin-left: 10px;"}
                      = link_to "Create new custom skill.", new_group_path_path
                - else
                  %p 
                    You don't have any custom Challenges. 
                    = link_to "Create one now.", new_group_path_path
            
              
            
        %div.row{ style: "margin: 40px auto 30px;" }
          = f.submit @evaluation.new_record? ? "Create Evaluation" : "Save Evaluation", class: "button button-actionable"