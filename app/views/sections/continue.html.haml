%div.quizcontainer.hide{ style: "#{@stored_resource.nil? ? '': 'margin-top: 0px;'}" }
  = render "modals/report_issue"
  %div.quizspace
    - if params[:action] == "continue"
      :javascript
        $(function(){
          $.MB.init_arena();
          $(".quizcontainer").fadeIn();
        });
     
    %div.quizheader
      = image_tag @path.path_pic, style: "width: 50px; height: 50px;", alt: "#{@path.name}"
      %div{ style: "display:inline-block;" }
        %span <strong>#{@path.name}:</strong> #{@section.name}</span>
        %div#idprogressbar
    %div{ style: "text-align:center;" }
      = render "sections/stored_resource", { :stored_resource => @stored_resource }
    %div.questionandresponsespace{ style: "width: 425px;" }
      %div.questionspace
        %pre.CRquestion= @task.question
      %div.questionfooter
        %div.pointbar{ style: "position: relative;" }
          %div.pointbarfiller{ style: "display: inline-block;"}
          %div.pointbartext{ style: "position: absolute; left: 44%;" } 100 points
      %div.responsespace
        = form_tag(complete_section_path(@section.id), :remote => true, :method => "put", :id => "challenge_form") do
          = hidden_field_tag :task_id, @task.id
          = hidden_field_tag :points_remaining, 100
          = hidden_field_tag :streak, @streak
          %ol{ style: "list-style-position: inside; margin-left: 0px;" }
            - @answers.each do |a|
              %li.answer_content{ id: "answer_#{a.id}" }
                = radio_button_tag :answer, a.id, false, style: "display: none;"
                %span= a.content
        - if current_user
          = link_to "Next", start_section_path(@section.id), id: "nextbutton", class: "hide button button-actionable", onclick: '$(this).addClass("disabled").attr("disabled", "disabled");'
        - else
          %a#nextbutton.login_link.button.button-actionable.hide Continue
    %div{ style: "display:inline-block; vertical-align:top;" }
      %div.pointsandstreakspace
        %div.pointspace.counterbox
          %span.counter{style: "display:block"}
            - earned_points_digits = @enrollment.total_points.to_s.split("").reverse.push("0").push("0").push("0").reverse.slice(-4, 4)
            - earned_points_digits.each do |d|
              %span.digit
                %span{ title: "#{d}" }= d
          %br
          %span Points
        %div.streakspace.counterbox
          %span.counter
            - streak = @streak.to_s.split("").reverse.push("0").reverse.slice(-2, 2)
            - streak.each do |s|
              %span.digit
                %span{ title: s }= s
          %br
          %span Streak
      %div.messagespace{ style: "text-align: right; margin: 12px 0px 0px 25px; width: 258px;" }
        - if @task.resource
          %p= @task.resource
    - if current_user
      %a.arena_report_link{ style: "float:right; text-decoration:none;"} Report this question