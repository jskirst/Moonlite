<% answer_status = ["Wrong", "Correct", "Skipped"] %>
<h3>You completed this section.</h3>
<% if !@answers.empty? %>
	<p>Your score was <%= @correct_answers.to_s + "/" + @total_answers.to_s %></p>
	<p>Your provided the following answers:</p>
	<ol>
	<% @answers.each do |answer| %>
		<li>
			<dl>
				<dt>Question:</dt>
				<dd><%= answer.task.question %></dd>
				<dt>Answer:</dt>
				<dd><%= answer.task.describe_correct_answer %></dd>
				<dt>Your answer:</dt>
				<dd><%= answer_status[answer.status_id] %></dd>
			</dl>
		</li>
	<% end %>
<% end %>
</ol>
<div class="actions">
  <%= link_to "Go back", @section.path, :class => "btn primary" %>
</div>