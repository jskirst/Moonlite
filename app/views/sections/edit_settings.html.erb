<h1>Edit Section</h1>
<ul class="tabs">
	<li><%= link_to "Settings", edit_section_path(@section.id) %></li>
	<li class="active"><a href="#">Settings</a></li>
	<li><%= link_to "Tasks", edit_section_path(@section.id, :m => "tasks") %></li>
</ul>
<section>
<%= form_for(@section) do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<div class="field clearfix">
		<label>Settings</label>
		<div class="input">
			<ul class="inputs-list">
				<li>
					<label>
						<%= f.check_box :is_published, :confirm => "This will publish the path so all users in your account can access it. Are you sure you want to publish this now?" %>
						<span>Publish this section to your Path so it is visible to everyone</span>
					</label>
				</li>
			</ul>
		</div>
	</div>
	<div class="actions">
		<%= f.submit "Save", :class => "btn primary" %>
		<%= link_to "Back to Path", edit_path_path(@section.path, :m => "sections"), :class => "btn secondary" %>
	</div>
<% end %>
</section>