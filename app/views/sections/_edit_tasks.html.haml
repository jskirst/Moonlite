:javascript
  $(function(){
    //$('.section_questions_container form').submit(block_form_submit);
    
    $('.section_questions_container form').each(function(){
      $(this).unbind();
      $(this).on('ajax:success', add_new_task);
    });
    $('.delete_button').each(function(){
      $(this).unbind();
      bind_delete_task(this);
    });
    $('.edit_button').each(function(){
      $(this).unbind();
      $(this).click(function(){
        $(this).attr("disabled","disabled");
      });
      bind_edit_task(this);
    });
    // $(".correct_answer").change(function(){
      // $(this).unbind();
      // bind_answer_suggestion(this);
    // });
    $('.task_list td').hover(
      function(){
        $(this).find('.edit_task_buttons').show();
        $(this).css("background-color", "whitesmoke");
      },
      function(){
        $(this).find('.edit_task_buttons').hide();
        $(this).css("background-color", "white");
      }
    );
  });

= render "tasks/new_task_form", { new_task: new_task, display: display_new_task_form, section: section }
%table.task_list
  - tasks.each do |t|
    - next if t.id.nil?
    %tr
      %td.task= render "tasks/task", { :task => t }