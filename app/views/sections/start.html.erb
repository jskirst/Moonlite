<% if @must_register %>
  <script>
  $(function(){
    $('a[id!="facebook_signin"]').attr("href", "#");
    $('a[id!="facebook_signin"]').click(function(){
      $('#must_complete_first_modal').modal({
        keyboard: true,
        show: true
      });
    });
  });
  </script>
  <%= render "sections/modals/must_complete_first" %>
<% end %>

<% if @immediate_registration %>
  <%= render "users/immediate_registration", { :path => @path } %>
  <script>
    $(function(){
      $('#username_modal').modal({ keyboard: true, backdrop: 'static', show: true });
      bind_change_name_form();
    });
  </script>
<% end %>

<%= render "continue", @locals %>