:css
  .body.container { border: 0px; background-color: transparent; box-shadow: none; margin-top: -40px; }  

%div.quizcontainer
  %div.quizspace
    %div.quizheader
      = image_tag @section.path.path_pic, size: "40x40"
      %div{ style: "display:inline-block;" }
        %span <strong>#{@section.path.name}:</strong> #{@section.name}</span>
        %div#idprogressbar
    %div.completionmessagespace
      %div.completionheader
        %span Congratulations!
      %div.completionsubheader You just scored <strong>#{@section.points_earned(current_user)} points</strong> in this section!
      %div.completionstats
        %p Total Challenge points: <strong>#{@enrollment.total_points}</strong>
        %p Current level: <strong>#{@enrollment.level}</strong>
        %p New rank: <strong>102 of 492</strong>
    %div{ style: "display:inline-block; vertical-align:top;" }
      %div.completionnextsteps
        %h3 Continue improving your score
        %ul
          %li
            Complete Challenge Questions
            %p= link_to "8 available", path_url(@section.path, completed: true)
          %li Take additional sections
          %p= link_to "4 of 12 sections unlocked", path_url(@section.path, completed: true) 
    %span.socialiconholder
      %a <img class="socialicon" src="https://s3.amazonaws.com/moonlite-nsdub/static/icon+Facebook+small.png"></a>
      %a <img class="socialicon" src="https://s3.amazonaws.com/moonlite-nsdub/static/icon+twitter+small.png"></a>
      %a <img class="socialicon" src="https://s3.amazonaws.com/moonlite-nsdub/static/icon+Google%2B+small.png"></a>
      %a <img class="socialicon" src="https://s3.amazonaws.com/moonlite-nsdub/static/icon+Pinterest+small.png"></a>
    = link_to "Continue", community_path_url(@section.path, completed: "true"), class: "btn info", style: "float: right;"
