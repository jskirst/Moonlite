<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field clearfix">
		<%= f.label :email %>
		<div class="input">
			<%= f.text_field :email, :autofocus => true %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label :password %>
		<div class="input">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="actions">
		<%= f.submit "Sign in", :class => "btn primary" %>
	</div>
<% end %>