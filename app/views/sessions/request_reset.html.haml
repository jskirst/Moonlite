.aboutcontainer
  .aboutbox
    .aboutheader
      %img{ src: "https://s3.amazonaws.com/moonlite-nsdub/static/stoney+100x150.png", alt: "Stoney"}
      %span Reset Password
    %hr{ style: "margin:0"}
    .aboutbody
      = form_for(User.new, url: send_reset_path) do |f|
        %h4{ style: "margin-bottom: 10px; line-height: 18px;" }
          Enter in the email for the account you need reset and we'll send you a reset link right away!
        %div.control-group
          %label.control-label Email
          %div.controls
            = f.text_field :email, autofocus: true
        %div.control-group
          %div.controls
            = f.submit "Reset", class: "button button-actionable"