%div#homepage
  %div#topsection
    %div.headerspace
      %div#leftheaderspace Explore the world of Metabright
    %div#carouselupdatespace
      %ul.inlinedisplay
        - @enrollments.each do |e|
          %li
            %div.mosaic-block.bar2
              = link_to path_path(e.path), class: "mosaic-overlay" do
                %div.details
                  %h4{ style: "margin-bottom: 0px;" }= e.path.name
                  %h5{ style: "margin-left: 10px; color: white; font-size: 12px;" } Level #{e.level}, #{e.total_points} points
              %div
                %img.mosaic-backdrop{ src: e.path.path_pic }
        - if @enrollments.size < 3
          %li
            %div.mosaic-block.bar2
              %a.explore_link.mosaic-overlay{ style: "cursor: pointer;" }
                %div.details
                  %h4 Find new challenges...
              %div
                %img.mosaic-backdrop{ src: "http://placekitten.com/200/300" }
                
  %div.row
    %div.span5
      - unless @suggested_paths.empty?
        %div.leftbox
          %div.leftboxheader Suggested Challenges
          %div.leftboxfooter
            %li.leftrailcontent
              - @suggested_paths.each do |p|
                = link_to p do
                  = image_tag p.path_pic, class: "leftrailicon"
      %div.leftbox
        %div.leftboxheader Enrolled Personas
        %div.leftboxfooter
          %li.leftrailcontent
          - @enrolled_personas.each do |p|
            %a.explore_link{ style: "cursor: pointer; text-decoration: none;" }
              = image_tag p.picture, class: "leftrailicon"
    %div.span11
      %div.newsfeed
        %div
          %div.leftboxheader Stream
        = render "shared/newsfeed", { newsfeed_items: @newsfeed_items }