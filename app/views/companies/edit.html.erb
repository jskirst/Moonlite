<section id="company-settings">
	<h1><%= @company.name %></h1>
	<ul class="tabs">
		<li><%= link_to "Users", @company %></li>
		<li class="active"><a href="#">Settings</a></li>
		<li><%= link_to "User Rolls", user_rolls_path %></li>
	</ul>
	<section id="settings">
		<h2 style="margin-bottom:15px;">Settings</h2>
		<%= form_for(@company) do |f| %>
			<%= render "shared/error_messages", :object => f.object %>
			<div class="field clearfix">
				<%= f.label :name %>
				<div class="input">
					<%= f.text_field :name %>
				</div>
			</div>
			<hr/>
			<div class="field clearfix">
				<%= f.label :categories %>
				<div class="input">
					<% if @categories.empty? %>
					<p>You have not created any Path categories yet for your company.</p>
					<% else %>
					<ol class="inputs-list">
						<% @categories.each do |c| %>
						<li><%= c.name %> - <%= link_to "Delete", c, :method => :delete, :confirm => "You sure?", :title => "Delete Category" %></li>
						<% end %>
					</ol>
					<% end %>
					<%= link_to "Add a Path category", new_category_path, :class => "btn secondary" %>
				</div>
			</div>
			<hr/>
			<div class="field clearfix">
				<%= f.label "Default User Roll" %>
				<div class="input">
					<select id="company_user_roll_id" name="company[user_roll_id]">
						<% @user_rolls.each do |u| %>
							<option value="<%= u.id %>" <%= "selected='selected'" if @company.user_roll_id == u.id %>><%= u.name %></option>
						<% end %>
					</select>
				</div>
			</div>
			<div class="field clearfix">
				<%= f.label "Default User Profile Picture" %>
				<div class="input">
					<%= f.text_field :default_profile_picture_link %>
				</div>
			</div>
			<div class="actions">
				<%= f.submit "Save", :class => "btn primary" %>
			</div>
		<% end %>
	</section>
</section>