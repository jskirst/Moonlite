<section id="company-settings">
	<h1><%= @company.name %></h1>
	<ul class="tabs">
		<li><%= link_to "Users", @company %></li>
		<li class="active"><a href="#">Settings</a></li>
	</ul>
	<section id="settings">
		<%= form_for(@company) do |f| %>
			<%= render "shared/error_messages", :object => f.object %>
			<div class="field clearfix">
				<%= f.label :name %>
				<div class="input">
					<%= f.text_field :name %>
				</div>
			</div>
			<div class="field clearfix">
				<label>Settings</label>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.check_box :enable_company_store %>
								<span>Enable Company Store</span>
							</label>
						</li>
					</ul>
				</div>
			</div>
			<div class="actions">
				<%= f.submit "Save", :class => "btn primary" %>
			</div>
		<% end %>
	</section>
</section>