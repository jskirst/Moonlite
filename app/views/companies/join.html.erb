<h2>Join <%= @company.name %> on Moonlite</h2>
<p style="margin: 20px 0px 30px 0px;">Welcome to Moonlite! Fill out the form below to create an account and join your company.</p>
<%= form_for @user, :url => { :controller => "companies", :action => "accept" }, :method => "put" do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<%= f.hidden_field :signup_token, :value => @company.signup_token %>
	<div class="field">
		<%= f.label :name %>
		<div class="input">
			<%= f.text_field :name %>
		</div>
	</div>
		<div class="field">
		<%= f.label :email %>
		<div class="input">
			<%= f.text_field :email %>
		</div>
	</div>
	<div class="field">
		<%= f.label :password %>
		<div class="input">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirm password" %>
		<div class="input">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>
	<div class="field">
		<div class="input">
			<p>Already have a Moonlite account? <%= link_to "Login here.", signin_path %></p>
		</div>
	</div>
	<div class="actions">
		<%= f.submit "Sign up", :class => "btn primary" %>
	</div>
<% end %>