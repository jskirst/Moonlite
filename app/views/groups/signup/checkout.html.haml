:css
  body{ background-image: url("https://s3.amazonaws.com/moonlite-nsdub/static/Backgrounds/gplaypattern.png"); background-repeat: repeat; background-size: auto; }
  .aboutcontainer{ width: 950px; background: rgba(36, 72, 109, 0.8); }
  .payment-errors { margin: 20px 0 5px 0; color: red; font-size: 17px; }
%script
  $(function(){ $.MB.Checkout.init(); });

- if Rails.env == "development"
  :javascript
    $(function(){
      $("input[data-stripe=number]").val("4242424242424242");
      $("input[data-stripe=cvc]").val("123");
      $("input[data-stripe='exp-month']").val("01");
      $("input[data-stripe='exp-year']").val("2018");
    })

#employer1.aboutcontainer
  .aboutbox
    .aboutheader
      %img{ src: STONEY_SMALL_URL, alt: "Stoney"}
      %span Turbocharge your hiring
    .body
      %div
        = form_for(@group, url: checkout_group_url(@group), remote: true, html: { class: "form-horizontal", id: "new_subscription" }) do |f|
          = f.hidden_field :stripe_token
          .control-group
            .controls
              %p.payment-errors= @error
          .control-group
            %label.control-label Card Number
            .controls
              %input{ type: "text", size: 20, data: { stripe: "number" }, style: "width: 24ex;" }
          .control-group
            %label.control-label CVC
            .controls
              %input{ type: "text", size: 4, data: { stripe: "cvc" }, class: "input-small", style: "width: inherit;" }
          .control-group
            %label.control-label Expiration (MM/YYYY)
            .controls
              %input{ type: "text", size: 2, data: { stripe: "exp-month" }, placeholder: "MM", class: "input-small", style: "width: 2em;" }
              /
              %input{ type: "text", size: 4, data: { stripe: "exp-year" }, placeholder: "YYYY", class: "input-small", style: "width: 4em;" }
          .control-group
            .controls
              %input{ type: "submit", value: "Checkout", class: "button button-actionable" }