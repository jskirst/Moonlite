= form_for(@task, action: :update, remote: true, "data-type" => "html", html: { class: "form-horizontal edit_task" } ) do |f|
  :javascript
    $(function(){ $.MB.capture_tabs(); })
  %div{ style: "margin-bottom:20px; float:right;" }
    = f.submit "Save", :id => "save_question_button", :class => "button button-info"
    %span.button.button-standard{ onclick: "$(this).parents('td').find('div.question_display').show(); $(this).parents('td').find('.edit_task').remove();" } Close
  %div
    %h4{ style: "margin-left:46px;" } Edit Question
    %div.control-group
      %label.control-label Question
      %div.controls
        = f.text_area :question, class: "xxlarge", rows: "6", style: "width: 95%;"
    %div.answers
      - @answers.each do |a|
        %div.control-group
          %label.control-label= a.is_correct ? "Correct answer" : "Wrong answer"
          %div.controls
            = f.text_field "answer_#{a.id}", value: a.content, maxlength: 255, size: 75, class: (a.is_correct ? "correct_answer" : "wrong_answer")
      %div.control-group
        %div.controls
          - if @stored_resource
            = image_tag @stored_resource.obj.url, style: "height: 100px;"
            = link_to "Remove", delete_stored_resource_path(@stored_resource.id), method: :delete, confirm: "Are you sure you want to remove this attachment?"
          - else
            = link_to "Add Image", add_stored_resource_task_path(@task)
    %div.control-group
      %label.control-label Template
      %div.controls
        = f.text_area :template, style: "height: 250px; width: 95%; overflow: auto; border: 1px solid #cccccc; background-color: #ffffff; box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075); border-radius: 4px; font-family: 'Menlo', 'Courier New', 'Terminal', monospace; font-size: 14px;"