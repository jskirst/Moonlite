<h1><%= @form_title %></h1>
<%= form_for @task do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<%= f.hidden_field :section_id, :value => @section_id %><br/>
	<div class="field clearfix">
		<%= f.label :question %>
		<div class="input">
			<%= f.text_area :question, :class => "xxlarge", :rows => "3" %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label "Answer 1" %>
		<div class="input">
			<%= f.text_field :answer1, :maxlength => 255, :size => 75 %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label "Answer 2" %>
		<div class="input">
			<%= f.text_field :answer2, :maxlength => 255, :size => 75 %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label "Answer 3" %>
		<div class="input">
			<%= f.text_field :answer3, :maxlength => 255, :size => 75 %>
		</div>
	</div>
		<div class="field clearfix">
		<%= f.label "Answer 4" %>
		<div class="input">
			<%= f.text_field :answer4, :maxlength => 255, :size => 75 %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label :correct_answer %>
		<div class="input">
			<select id="task_correct_answer" name="task[correct_answer]">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</select>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label :points %>
		<div class="input">
			<select id="task_points" name="task[points]">
				<option value="5">5</option>
				<option value="10">10</option>
				<option value="15">15</option>
				<option value="20">20</option>
				<option value="25">25</option>
			</select>
		</div>
	</div>
	<div class="actions">
		<%= f.submit "Save", :class => "btn primary" %>
		<% if @task.new_record? %>
			<%= f.submit "Save and New", :class => "btn secondary" %>
		<% end %>
		<%= link_to "Back to Section", edit_section_path(@section_id, :m => "tasks"), :class => "btn secondary" %>
	</div>
<% end %>