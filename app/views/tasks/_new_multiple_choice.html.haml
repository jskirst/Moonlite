%div.editor_view{ class: ("hide" unless display) }
  = form_for(section.tasks.new, remote: true, html: { class: "form-horizontal" }) do |f|
    %div.step1
      = f.hidden_field(:answer_type, value: Task::MULTIPLE)
      = f.hidden_field(:section_id, value: section.id)
      = f.hidden_field(:source, value: "launchpad")
      %fieldset
        %legend Create an Arena question
        %span.help-block What's your question?
        = f.text_area(:question, rows: 2, placeholder:"Question...")
        %span.help-block What are the possible answers?
        %label Correct answer
        = f.text_field(:answer1, placeholder: "Required", style:"margin-left:17px;")
        %label Wrong answer
        = f.text_field(:answer2, placeholder: "Required")
        %label Wrong answer
        = f.text_field(:answer3, placeholder: "Optional")
        %label Wrong answer
        = f.text_field(:answer4, placeholder: "Optional")
        %span.error_message
        %a.next.button.button-actionable{ style:"float:right;" } Next
      .tips
        %h4 
          %img{ src:"https://s3.amazonaws.com/moonlite-nsdub/static/Lightbulb+icon", alt: "Tip"}
          Tips:
        %ul
          %li 
            You <strong>earn #{(Task::CREATOR_AWARD_POINTS+100).to_s} points</strong> per published question.
          %li Keep the tone informal but direct.
          %li Check for spelling and grammar.
    
    %div.step2.hide
      %fieldset
        %legend Create an Arena question
        %h4 Your question:
        %div{style:"margin-left:12px;"}
          %code.content.question
        %h4 Correct answer:
        %div{style:"margin-left:12px;"}
          %span.correct_answer
        %h4 Here's where this Arena question will appear:
        %div{style:"margin-left:12px;"}
          %span{style:" font-size:14px;"} Challenge:
          %span{style:"font-weight:bold;font-size:14px;"} #{section.path.name}
          %br/
          %span{style:" font-size:14px;"} Section: 
          %span{style:"font-weight:bold;font-size:14px;"} #{section.name}
        %h4{ style: "margin-bottom:5px;" } Ready to post?
        %a.back.button.button-standard{ style:"float:left; margin-bottom:10px; text-shadow:none; color:#333;" } Back
        = f.submit("Yes!", class: "button button-actionable", style: "float:right;")
    
    %div.step3.hide
      %span{ style:"position:relative; top:7px; font-size:30px;"} Nice work!
      %h4 Your question is now visible to the MetaBright community!
      %h4{ style: "margin-bottom:12px;" } You earn #{(Task::CREATOR_AWARD_POINTS+100).to_s} points every time you publish a question!
      %a.restart.button.button-actionable{ style:"float:right; margin-bottom:10px; text-shadow:none;"} Create another question
      %a.finish.button.button-standard{ style:"float:left; margin-bottom:10px; text-shadow:none; color:#333;"} Finish