<h1>Edit</h1>
<%= form_for(@task) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :question %><br/>
		<%= f.text_area :question %>
	</div>
	<div class="field">
		<%= f.label :answer %><br/>
		<%= f.text_area :answer %>
	</div>
	<div class="field">
		<%= f.label :resource %><br/>
		<%= f.text_field :resource %>
	</div>
	<div class="field">
		<%= f.label :rank %><br/>
		<%= f.text_field :rank %>
	</div>
	<div class="actions">
		<%= f.submit "Save" %>
	</div>
<% end %>