<h1><%= @form_title %></h1>
<%= form_for @info_resource do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<%= f.hidden_field :path_id, :value => @path_id %><br/>
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :link %><br/>
		<%= f.text_field :link %>
	</div>
	<div class="actions">
		<%= f.submit "Save" %>
	</div>
<% end %>