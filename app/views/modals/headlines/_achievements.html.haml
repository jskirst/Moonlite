.headlines.hide{ style: " min-height: auto; width:68%;"}
  .header
    = image_tag GIANT_STONEY, style: "display: inline-block; ", alt: "Stoney"
    %h1{ style: "font-size: 59px; padding-top: 8px;"} Congratulations!              
    %h2{ style: "font-size: 25px;"  }
      - new_level = @achievements[:level]
      - new_rank = @achievements[:rank]
      - if new_level && new_rank
        You just leveled up and reached the Top #{new_rank}!
        - subtext = "You've reached Level #{new_level} and are now ranked #{@enrollment.rank.ordinalize} in the #{@path.name} Challenge!"
        - sharing_text = "Just leveled up and made it into the Top #{new_rank} in the #{@path.name} Challenge on @MetaBright!" 
      - elsif new_level
        You've reached a new Level!
        - subtext = "You've reached Level #{new_level} the #{@path.name} Challenge!"
        - sharing_text = "Just made it to Level #{new_level} in the #{@path.name} Challenge on @MetaBright!"
      - elsif new_rank
        You just reached the Top #{new_rank}!
        - subtext = "You're now ranked #{@enrollment.rank.ordinalize} in the #{@path.name} Challenge!"
        - sharing_text = "Just broke the Top #{new_rank} in the #{@path.name} Challenge on @MetaBright!"
    .clear_floats
      
  .body
    %p.headline_text #{subtext} Share this achievement and brag to your friends.
    .image_box
      = image_tag SHARE_FACEBOOK_BIG, onclick: sharing_popup_javascript(:facebook, challenge_url(@path.permalink), sharing_text)
      = image_tag SHARE_GOOGLE_BIG, onclick: sharing_popup_javascript(:google_plus, challenge_url(@path.permalink), sharing_text)
      = image_tag SHARE_TWITTER_BIG, onclick: sharing_popup_javascript(:twitter, challenge_url(@path.permalink), sharing_text)
  
  .exit{ style: "float: right; margin-top: 24px;" }
