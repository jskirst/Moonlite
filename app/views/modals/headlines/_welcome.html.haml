.headlines.hide{ style: " min-height: auto; width:66%;"}
  :javascript
    function checkSubmit(e, input){
      if(e && e.keyCode == 13){ $(input).parents('form').submit(); }
    }
    
    function submit_or_close(exit_button){
      if($("#user_password").val() == ""){
        $(exit_button).parents('.headlines').fadeOut(300, function(){ 
          $(this).remove(); 
          if($('.headlines').size() > 0){ 
            $('.headlines:first').show() 
          } else { 
            $('.launchpadcontent').show(); 
          } 
        });
      } else {
        $('#update_name').submit();
      }
    }
  
    $(function(){
      $("#update_name").on("ajax:success", function(e, result){
        if(result.status == "error"){
          $(this).find("p.error").remove();
          $(this).append("<p class='error'>Email invalid or already registered.</p>")
          $(this).find("#user_email").addClass("error")
        } else {
          $("nav.navbar .users_name").text($(this).find("#user_name").val());
          $(this).find("#user_email").removeClass("error").addClass("successful");
          $(this).parents('.headlines').fadeOut(700, function(){ 
            $(this).remove(); 
            if($('.headlines').size() > 0){ 
              $('.headlines:first').show() 
            } else { 
              $('.launchpadcontent').show(); 
            }
          });
        }
      });
    })
  .header
    = image_tag STONEY_SMALL_URL, style: "display: inline-block; height:auto;", alt: "Stoney"
    %h1{ style: "font-size: 35px; padding-top: 15px;"} Welcome to MetaBright!              
    %h2{ style: "font-size: 20px;"  }
      Add your high score to the leaderboard and keep racking up points!
      
  .body.centered{ style: "margin-top: 30px;" }
    .signup
      = link_to "/auth/google_oauth2", class: "btn danger" do
        = image_tag ICON_LOGIN_GOOGLE, alt: "Google sign up"
        %span.landingbuttontext Sign in with Google »
      
      = link_to "/auth/facebook", class: "btn danger" do
        = image_tag ICON_LOGIN_FACEBOOK, alt: "Facebook sign up"
        %span.landingbuttontext Sign in with Facebook »
      
      %div.divider OR
      = form_for(current_user, remote: true, html: { id: "update_name" }) do |f|
        = f.text_field :name, value: nil, placeholder: "Name"
        = f.text_field :email, value: nil, placeholder: "E-Mail"
        = f.password_field :password, value: nil, placeholder: "Password", onKeyPress: "return checkSubmit(event, this);"
  
  .exit{ style: "float: right; margin-top: 24px;" }
    %a{ onclick: "submit_or_close(this);" } Continue to Launchpad »
