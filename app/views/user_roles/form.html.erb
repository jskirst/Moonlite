<h4><%= @title %></h4>
<h1><%= @user_role.name || "Untitled" %></h1>
<% if @form_mode == "new" %>
<p style="padding:10px; width:700px;">Create your new user role below by giving it a name and checking or unchecking each box to give any users with this roll access to the respective functionality.</p>
<% else %>
<p style="padding:10px;">Edit user role access below. Note that access priviledge changes will take effect immediately after you save your changes.</p>
<% end %>
<%= form_for @user_role do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
	<div class="field">
		<%= f.label :name %>
		<div class="input">
			<%= f.text_field :name, :class => "xlarge" %>
		</div>
	</div>
	<div class="field clearfix">
		<label>Settings</label>
		<div class="input">
			<ul class="inputs-list">
				<li>
					<label>
						<%= f.check_box :enable_administration %>
						<span>Enable Administration</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_company_store %>
						<span>Enable Rewards</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_leaderboard %>
						<span>Enable Leaderboard</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_dashboard %>
						<span>Enable Dashboard</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_tour %>
						<span>Enable Tour</span>
					</label>
				</li>            
				<li>
					<label>
						<%= f.check_box :enable_browsing %>
						<span>Enable challenge browsing</span>
					</label>
				</li>            
				<li>
					<label>
						<%= f.check_box :enable_comments %>
						<span>Enable comments on challenges</span>
					</label>
				</li>            
				<li>
					<label>
						<%= f.check_box :enable_news %>
						<span>Enable news feed</span>
					</label>
				</li>					
				<li>
					<label>
						<%= f.check_box :enable_feedback %>
						<span>Enable feedback on questions</span>
					</label>
				</li>            
				<li>
					<label>
						<%= f.check_box :enable_achievements %>
						<span>Enable achievements</span>
					</label>
				</li>						
				<li>
					<label>
						<%= f.check_box :enable_recommendations %>
						<span>Enable challenge recommendations</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_user_creation %>
						<span>Enable non-admin user content creation</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_collaboration %>
						<span>Enable all company admins to view and edit company challenges</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_auto_enroll %>
						<span>Enable auto-enrollment of new users in any published challenge</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_auto_generate %>
						<span>Enable automatic question generator</span>
					</label>
				</li>
			</ul>
		</div>
	</div>
	<% if @form_mode == "edit" %>
	<div>
		<h3>Adding Users</h3>
		<p style="padding:10px 10px 0px 10px;">Send the following link to invite new users. These new users will automatically belong to the <% @user_role.name %> user role type.</p>
		<p style="padding:10px; font-weight:bold;"><%= @user_role.signup_link %></p>
	<% end %>
	<div class="actions">
		<%= f.submit "Save", :class => "btn primary" %>
		<%= link_to "Delete", @user_role, :method => :delete, :confirm => "Are you sure you want to delete this user role?", :class => "btn danger" %>
		<%= link_to "Cancel", user_roles_path, :class => "btn secondary" %>
		
	</div>
<% end %>