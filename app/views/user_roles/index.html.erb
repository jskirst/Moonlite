<section id="company-settings" style="min-height: 500px;">
	<h1><%= @company.name %></h1>
	<ul class="tabs">
		<li><%= link_to "Users", @company %></li>
		<li><%= link_to "Settings", edit_company_path(@company) %></li>
		<li class="active"><a href="#">User roles</a></li>
		<li><%= link_to "Custom Styles", custom_styles_path %></li>
	</ul>
	<section>
		<h2 style="margin-bottom:15px;">User roles</h2>
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>User Type</th>
					<th>Num. of Users</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
				<% counter = 0 %>
				<% @user_roles.each do |ur| %>
					<tr>
						<td><%= counter.to_s %></td>
						<td><%= link_to ur.name, edit_user_role_path(ur) %></td>
						<td><%= ur.enable_administration ? "Admin" : "User" %></td>
						<td><%= ur.users.count %></td>
						<td>
						<%= link_to "Delete", ur, :method => "delete", :confirm => "Are you sure you want to delete this user role?", :class => "btn secondary" %>
						</td>
					</tr>
					<% counter += 1 %>
				<% end %>
			</tbody>
		</table>
		<%= link_to "New role", new_user_role_path, :class => "btn primary" %>
	</section>
	<div style="margin-top:30px;">
		<h4>Note: Adding Users</h4>
		<p>Users must be added to a specific user role. To invite new users, click on one of the user roles in the table above. From there, you'll find a link to use to invite new users to your organization.</p>
	</div>
</section>