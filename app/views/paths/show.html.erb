<section class="path">
	<div style="float:left; margin: 0px 15px 5px 0px;"><%= image_tag(@path.path_pic, :size=>"50x50") %></div>
	<div>
		<h1>
			<%= @path.name %>
		</h1>
	</div>
	<div style="padding:10px">
		<div><%= simple_format(@path.description) %></div>
	</div>
	<% if !@sections.empty? %>
	<div>
		<h3>Sections</h3>
		<ol>
		<% @sections.each do |s| %>
			<li>
				<h5>
					<%= link_to s.name, s %>
					<% if s.remaining_tasks(current_user) == 0 %>
					<span class="label">Completed</span>
					<% end %>
				</h5>
				<p><%= truncate(strip_tags(s.instructions), :length => 140) %></p>
			</li>
		<% end %>
		</ol>
	</div>
	<% end %>
	<section>
		<div class="actions">
		<% if !current_user.enrolled?(@path) %>
			<%= form_for current_user.enrollments.build(:path_id => @path.id) do |f| %>
				<%= f.hidden_field :path_id %>
				<%= f.submit "Enroll", :class=> "btn primary" %>
			<% end %>
		<% else %>
			<%= link_to "Continue", continue_path_path(@path), :class => "btn primary" %>
		<% end %>
		<% if current_user.company_admin? %>
			<%= link_to "Edit", {:controller => "paths", :action => "edit", :id => @path.id }, :class => "btn secondary" %>
			<%= link_to "Delete", @path, :method => "delete", :confirm => "Are you sure you want to delete this path?", :title => "Delete task", :class => "btn secondary" %>
		<% end %>
		</div>
	</section>
</section>