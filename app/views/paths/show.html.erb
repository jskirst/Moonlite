<section class="path">
	<section id="enrollment">
	<% if current_user.enrolled?(@path) %>
		<%= render "unenroll" %>
	<% else %>
		<%= render "enroll" %>
	<% end %>
	</section>
	<section id="description">
		<h1><%= @path.name %></h1>
		<p><%= @path.description %></p>
	</section>
	<% if current_user.enrolled?(@path) %>
	<section id="progress">
		<h2><%= gravatar_for current_user, :size => "20" %>Chatterati rank - 2</h2>
		<h3>You need 50 more points before you reach rank 3!</h3>
		<p>You can earn points by solving problems or by posting achievements related to this path. Fellow Moonliters will vote on your achievements to decide how many points to award you. Post something really impressive and you could get enough points to jump muliple ranks!</p>
	</section>
	<section id="action">
		<%= link_to "Solve Problems", continue_path_path, :class => "signup_button round left" %>
		<%= link_to "Post Achievement", "/achievements/6", :class => "signup_button round right" %>
	</section>
	<% end %>
</section>