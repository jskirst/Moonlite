<section class="path">
  <% if @start_mode == "Get Started" %>
    <%= render "paths/popups/get_started" %>
  <% end %>
	<div style="min-height: 120px;">
    <div style="float:left; margin: 0px 15px 0px 0px;">
      <%= image_tag(@path.path_pic, :size=>"100x100") %>
    </div>
    <div>
      <% unless @enrolled %>
        <%= form_for current_user.enrollments.build(:path_id => @path.id) do |f| %>
          <%= f.hidden_field :path_id %>
          <%= f.submit "Enroll", :class=> "btn primary", :style => "margin: 10px 40px 0px 0px; float:right;" %>
        <% end %>
      <% else %>
        <%= link_to @start_mode, continue_path_path(@path), :class => "btn primary", :style => "margin: 10px 40px 0px 0px; float:right;"%>
      <% end %>
    </div>
    <div>
      <h1 style="margin-bottom: 0px;"><%= @path.name %></h1>
    </div>
    <div style="padding:15px 30px 0 10px;">
      <div class="description"><%= @path.description.html_safe %></div>
    </div>
	</div>
  <hr/>
	<%= render "path_sections", { :sections => @sections } %>
  <hr/>
  <% unless @achievements.empty? %>
    <%= render "unlockable_achievements", { :achievements => @achievements } %>
    <hr/>
  <% end %>
  <%= render "enrolled_users", { :users => @enrolled_users } %>
  <%= render "facebook_like" %>
	<% if current_user.company_admin? %>
  <div class="actions">
    <% unless @path.is_published %>
      <%= link_to "Publish", edit_path_path(@path, :m => "settings"), :class => "btn primary" %>
    <% end %>
    <%= link_to "Delete", @path, :method => "delete", :confirm => "Are you sure you want to delete this path?", :class => "btn secondary" %>
    <%= link_to "Edit", {:controller => "paths", :action => "edit", :id => @path.id }, :class => "btn secondary" %>
  <% end %>
  </div>
</section>