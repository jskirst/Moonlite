:css  body{ background-color: $solid_employer_bg_color; background-image: none;}  .container.body { width: inherit; }  .employer-container { width: 980px; margin: 35px auto 0 auto; border-radius: 0; }  .employer-box .header { margin-bottom: 15px; margin-top:5px;}  .employer-box .header img { height: 61px; }  .employer-box .header h2 { display: inline-block; font-size: 30px; }  .employer-box .header hr { margin: 8px; }  .body { padding: 20px 0px; }  #api_result h1 { font-size: 22px; }  #api_result img { width: 40px; height: 40px; margin: 10px; }  h3 { font-size: 22px; margin-bottom: 10px; }  .new_path_placeholder img { opacity: 0.7; margin-top: -35px; }#employer.employer-container  .employer-box    .header      = image_tag GIANT_STONEY      %h2 My Challenges          .body{ style: "margin-bottom: 40px; padding: 0;" }      .custom_challenges        %ul.inlinedisplay          - @paths.each do |path|            = render "shared/mosaic", { pic: path.path_pic, link: edit_path_path(path.permalink), title: path.name, subtitle: "#{path.enrollments.size} users" }        = link_to "+ Create a new Challenge", (@group ? new_group_path_url(@group) : new_path_path), class: "create_link"