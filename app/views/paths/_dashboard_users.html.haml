%section{ style: "min-height: 300px;"}
  - if @user.nil?
    %p There are no users for this #{name_for_paths} yet.
  - else
    = form_tag(dashboard_path_path(@path), style: "float: right;", method: "get") do
      = hidden_field_tag("mode", "users")
      = select_tag("user", options_from_collection_for_select(@enrolled_users, "id", "name"))
      = submit_tag("Go", class: "btn primary")
    %h3 Submitted answers for #{@user.name}
    - if @responses.empty?
      %p{ style: "margin-top: 30px;" } There are no responses for this user yet.
    - else
      %ol
        - @responses.each do |r|
          %li{ style:"padding:15px; color:#404040;" }
            %p{ style: "font-size: 16px; font-weight:bold; margin-bottom: 20px;" }= r.task.question
            - if r.task.answer_sub_type == 100
              %blockquote
                %p= r.submitted_answer.content
            - elsif r.task.answer_sub_type == 101
              %p= image_tag sanitize(r.submitted_answer.content), :style => "height: 200px;"
            - elsif r.task.answer_sub_type == 102
              %p= youtube_embed(r.submitted_answer.content).html_safe
            %p{ style: "font-style: italic; font-size: 13px;"} #{r.points_awarded} points awarded