<%= render "tab_navigation" %>
<section class="tab_content">
<%= form_for(@path) do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<div class="field clearfix">
		<%= f.label "Challenge Name" %>
		<div class="input">
			<%= f.text_field :name %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label :description %>
		<div class="input">
			<%= f.text_area :description, :class=>"markitup", :rows => "15", :placeholder => "Try to describe this challenge to others in a couple paragraphs or less..." %>
		</div>
	</div>
	<div class="field clearfix">
		<%= f.label :category %>
		<div class="input">
			<select id="path_category_id" name="path[category_id]">
				<% @categories.each do |c| %>
					<% selected_value = c.id == @path.category_id ? "selected='selected'" : "" %>
          <option value="<%= c.id %>" <%= selected_value %>><%= c.name %></option>
        <% end %>
			</select>
		</div>
	</div>
  <hr/>
	<div class="field clearfix">
		<label>Settings</label>
		<div class="input">
			<ul class="inputs-list">
				<li>
					<label>
						<%= f.check_box :is_published, :confirm => "This will publish the challenge so all users in your account can access it. Are you sure you want to publish this now?" %>
						<span>Publish this challenge to your Moonlite account.</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :is_public, :confirm => "This will publish the challenge so all users in your account can access it. Are you sure you want to publish this now?" %>
						<span>Allow users to post this challenge to their public profile</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_section_display %>
						<span>Display section previews on the main challenge page</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_nonlinear_sections %>
						<span>Allow users to do sections in any order</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.check_box :enable_retakes %>
						<span>Allow users retake questions until they get them right</span>
					</label>
				</li>
				<li>
					<label>
						<%= f.text_field :game_type %>
						<span>Which game type?</span>
					</label>
				</li>
			</ul>
		</div>
		<br>
		<%= f.label "Question Timer (secs)" %>
		<div class="input">
			<%= f.text_field :default_timer %>
		</div>
		<br>
		<%= f.label "Exclude from leaderboards" %>
		<div class="input">
			<%= f.text_area :excluded_from_leaderboards, :rows => 3, :style => "width: 400px;" %>
		</div>
	</div>
  <hr/>
  <div class="field clearfix">
		<label>Picture URL</label>
		<div class="input">
			<%= f.text_field :image_url, :id => "image_url_input", :class=>"xxlarge", :placeholder => "URL to picture..." %>
      <a class="btn secondary" style="margin-left:10px;">Preview</a>
    </div>
	</div>
	<div class="field clearfix">
		<div class="input">
			<%= image_tag(@path.path_pic, :id => "image_url_preview", :width => "210", :style=>"margin:20px 0px 20px 0  px") %>
		</div>
	</div>
	<div class="actions">
		<%= f.submit "Save", :class => "btn primary" %>
		<%= link_to "View Challenge", @path, :class => "btn secondary" %>
	</div>
<% end %>
</section>