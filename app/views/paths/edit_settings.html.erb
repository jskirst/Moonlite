<%= render "tab_navigation" %>
<section class="tab_content">
<%= form_for(@path) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <div class="field clearfix">
    <%= f.label name_for_paths+" Name" %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description, :class=>"markitup", :rows => "15", :placeholder => "Try to describe this "+name_for_paths+" to others in a couple paragraphs or less..." %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :category %>
    <div class="input">
      <select id="path_category_id" name="path[category_id]">
        <% @categories.each do |c| %>
          <% selected_value = c.id == @path.category_id ? "selected='selected'" : "" %>
          <option value="<%= c.id %>" <%= selected_value %>><%= c.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <hr/>
  <div class="field clearfix">
    <label>Settings</label>
    <div class="input">
      <ul class="inputs-list">
        <li>
          <label>
            <%= f.check_box :is_published %>
            <span>Publish this <%= name_for_paths %> to your Moonlite account.</span>
          </label>
        </li>
        <li>
          <label>
            <%= f.check_box :is_public %>
            <span>Allow users to post this <%= name_for_paths %> to their public profile</span>
          </label>
        </li>
        <li>
          <label>
            <%= f.check_box :enable_section_display %>
            <span>Display section previews on the main <%= name_for_paths %> page</span>
          </label>
        </li>
        <li>
          <label>
            <%= f.check_box :enable_nonlinear_sections %>
            <span>Allow users to do sections in any order</span>
          </label>
        </li>
        <li>
          <label>
            <%= f.check_box :enable_retakes %>
            <span>Allow users retake questions until they get them right</span>
          </label>
        </li>
        <li>
          <label>
            <%= f.check_box :is_locked %>
            <span>Make visible but only accessible by creators and collaborators</span>
          </label>
        </li>
      </ul>
    </div>
    <br>
    <%= f.label "Question Timer (secs)" %>
    <div class="input">
      <%= f.text_field :default_timer %>
    </div>
    <br>
    <%= f.label "Game Type", :placeholder => "Advanced users only" %>
    <div class="input">
      <%= f.text_field :game_type %>
      <p><strong>NOTE:</strong> If you are not sure, leave game type blank.</p>
    </div>
    <br>
    <%= f.label "Exclude from leaderboards" %>
    <div class="input">
      <%= f.text_area :excluded_from_leaderboards, :rows => 3, :style => "width: 400px;" %>
    </div>
  </div>
  <hr/>
  <div class="field clearfix">
    <label>Picture URL</label>
    <div class="input">
      <%= f.text_field :image_url, :id => "image_url_input", :class=>"xxlarge", :placeholder => "URL to picture..." %>
      <a class="btn secondary" style="margin-left:10px;">Preview</a>
    </div>
  </div>
  <div class="field clearfix">
    <div class="input">
      <%= image_tag(@path.path_pic, :id => "image_url_preview", :width => "210", :style=>"margin:20px 0px 20px 0  px") %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn primary" %>
    <%= link_to "View "+name_for_paths, @path, :class => "btn secondary" %>
  </div>
<% end %>
</section>