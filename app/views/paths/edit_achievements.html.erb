<h1>Edit Path</h1>
<ul class="tabs">
	<li><%= link_to "Content", edit_path_path(@path.id) %></li>
	<li><%= link_to "Settings", edit_path_path(@path.id, :m=>"settings") %></li>
	<li><%= link_to "Sections", edit_path_path(@path.id, :m=>"sections") %></li>
	<li class="active"><a href="#">Achievements</a></li>
</ul>
<section>
	<div style="float: right; display:inline;">
		<%= link_to "New Achievement", new_achievement_path(:path_id => @path.id), :class=>"btn primary" %>
	</div>
	<h2><%= @path.name %></h2>
	<% if @achievements.empty? %>
		<p style="margin: 30px 0px 200px 0px;">You have not yet created any achievements for this Path.</p>
	<% else %>
		<table>
		<% @achievements.each do |a| %>
			<tr><td>	
				<h3>
					<%= a.name %>
				</h3>
				<p><%= truncate(strip_tags(a.description), :length => 255) %></p>
				<div style="float:left;display:inline;">
					<span class="label"><%= a.points.to_s %> points</span>
				</div>
				<div style="float:right;display:inline">
					<%= link_to "Edit", edit_achievement_path(a), :class => "btn secondary" %>
					<%= link_to "Delete", a, :method => :delete, :confirm => "Are you sure you want to delete this achievement?", :title => "Delete Achievement", :class => "btn secondary" %>
				</div>
			</tr></td>
		<% end %>
		</table>
	<% end %>
	<div class="actions">
		<%= link_to "Back to Path", @path, :class => "btn primary" %>
	</div>
</section>