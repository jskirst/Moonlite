<% if item[:type] == :event %>
  <div class="hoverscroll_slide shadow stream_item">
    <img src="<%= item[:user].profile_pic %>" height="20" width="20">
    <span><%= item[:user].name %></span>
    <p style="padding:6px; line-height: 15px; font-size: 14px;"><%= translate_user_event(item[:content]).html_safe %></p>
  </div>
<% elsif item[:type] == :text %>
  <div class="hoverscroll_slide shadow stream_item">
    <p style="padding:12px 10px; line-height: 15px; font-size: 14px;">"<%= truncate(item[:content], :length => 100) %>"</p>
    <% if @path.enable_voting %>
    <p style="position: absolute; top: 125px; width:100%; background-color:white; font-size: 14px; padding:5px;"><%= item[:votes] %> votes</p>
    <% end %>
  </div>
<% else %>
  <div class="hoverscroll_slide shadow stream_item">
    <%= image_tag item[:content], :size => "140x150"%>
    <% if @path.enable_voting %>
    <div style="position: absolute; top: 125px; background-color:white; font-size: 14px; padding:5px 0 5px 5px; width:136px;">
      <%= item[:votes] %> votes
    </div>
    <% end %>
  </div>
<% end %>