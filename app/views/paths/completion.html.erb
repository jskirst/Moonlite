<style>
  .completion img, h1, h4, a{
    display: inline;
  }
  .completion a {
    margin: 30px 20px 0px 0px;
  }
  .suggested-paths {
    margin-bottom: 15px;
    background: white url(/images/bg_mlt_slider.GIF) repeat-x left bottom;
  }
  .suggested-paths img {
    height: 150px;
    width: 210px;
  }
  .suggested-paths ul {
    margin-top: 20px;
  }
  .suggested-paths h2 {
    display: inline;
  }
  .suggested-paths span {
    float:right;
    padding-top:10px;
    font-style: italic;
    font-size: 14px;
  }
</style>
<section class="completion row">
  <div class="span4">
    <%= image_tag @path.path_pic, :size => "200x200" %>
  </div>
  <div class="span12" style="margin-top: 15px;">
    <h1>Congratulations!</h1>
    <div>
      <h4>You have successfully completed this path. You earned <%= @total_points_earned %> points for this path.</h4>
      <br>
      <a href="http://www.linkedin.com/shareArticle?mini=true&url=<%= hero_path_path(@path.id, :hero => current_user.id) %>&title=Moonlite Achievement Unlocked!&summary=<%= current_user.name %> is now a certified expert in <%= @path.name %>. Can you beat their score?&source=<%= hero_path_path(@path.id, :hero => current_user.id)%>"><img src="/images/linkedin-connect.GIF" width="150" height="45"></a>
      <a href="http://www.facebook.com/sharer.php?u=<%= hero_path_path(@path.id, :hero => current_user.id) %>"><img src="/images/facebook-connect.GIF" width="150" height="55"></a>
      <a href="http://www.twitter.com"><img src="/images/twitter-connect.PNG" width="150" height="45"></a>
    </div>
  </div>
</section>
<hr>
<section class="suggested-paths">
  <h2>Similar Paths</h2>
  <span>Categories: Just for fun, Pop Culture, Travel</span>
  <ul class="media-grid">
    <% @similar_paths.each_index do |p| %>
      <% if p >= 4 then break else path = @similar_paths[p] end %>
      <li><%= link_to image_tag(path.path_pic), path %>
    <% end %>
  </ul>
</section>
<section class="suggested-paths">
  <h2>Recommended for you</h2>
  <span>Categories: Business, Sales, Information Technology</span>
  <ul class="media-grid">
    <% @suggested_paths.each_index do |p| %>
      <% if p >= 4 then break else path = @suggested_paths[p] end %>
      <li><%= link_to image_tag(path.path_pic), path %>
    <% end %>
  </ul>
</section>