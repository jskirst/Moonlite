%div.single_pane
  %h3= @idea.new_record? ? "New Idea" : "Edit Idea"
  = form_for(@idea, class:"form-horizontal") do |f|
    %div.control-group
      %label.control-label Title
      %div.controls
        = f.text_field(:title)
    %div.control-group
      %label.control-label Description
      %div.controls
        = f.text_area(:description, style: "width: 400px; height: 100px;")
    %div.control-group
      %div.controls
        = link_to "Back", ideas_path, class: "button button-standard"
        = f.submit(@idea.new_record? ? "Submit Idea" : "Save Changes", class: "button button-info")
