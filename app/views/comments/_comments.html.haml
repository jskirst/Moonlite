%div.postfooter
  %div.leftstuff
    %div.displayin.floatl
      %a.comment{ style: "position: relative; top: 5px;", onclick: "open_comments(this);" } #{owner.comments.size.to_i} Comments
    = render "shared/sharing", { custom_style: "display: inline; margin-left: 10px; float: left;", title: sharing_title, url: sharing_url } 
    %div.displayin.floatr{ style: "position: relative; top: 5px;" }
      - if created_at.today?
        %p #{time_ago_in_words(created_at)} ago
      - else
        %p= created_at.strftime("%B %d, %Y")
  %div.comments{ style: "text-align: left; display: none;" }
    - if owner.comments.empty?
      %p.no_comments There are no comments for this yet. 
    %ul{ style: "list-style: none; margin: 10px 0 20px 0;" }
      - owner.comments.each do |comment|
        = render "comments/comment", comment: comment
    - if current_user
      = form_for(current_user.comments.new, remote: true) do |f|
        %div{ style: "width: 100%" }
          = f.text_area :content, :rows => 2, :style => "width: 90%; height: 55px; "
        = hidden_field :comment, :owner_type, { :value => owner_type }
        = hidden_field :comment, :owner_id, { :value => owner_id }
        = f.submit "Add Comment", :class => "button button-standard button-small", :style => "margin-top:15px;"
